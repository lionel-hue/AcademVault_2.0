# AcademVault Configuration Template
# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql              # 'mysql' for Docker, 'localhost' for manual
DB_PORT=3306
DB_DATABASE=AcademVault
DB_USERNAME=academ_vault_user
DB_PASSWORD=your_secure_password_here

# JWT Authentication
# Generate with: php artisan jwt:secret
JWT_SECRET=base64:your_generated_secret_here

# Email Configuration (Gmail recommended)
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="AcademVault"

# Optional API Keys (for enhanced search features)
YOUTUBE_API_KEY=your_youtube_api_key_here
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here